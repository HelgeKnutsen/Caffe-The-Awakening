from os import listdir
from os.path import isfile, join


def save_n_label(path, folder, label):
    s = open(folder, 'a')  # open file and append image names and labels on separate lines
    onlyfiles = [f for f in listdir(path) if isfile(join(path, f))]  # list the files in mypath
    for i in xrange(len(onlyfiles)):  # iterate over file names
        s.write(path + '/' + onlyfiles[i] + ' ' + label + '\n')
    s.close()  # close file
    return s.closed


caffe_root = '/home/helge/caffe/' # caffe_root
path = caffe_root + 'data/flickr_style' # folder with image files
folder = caffe_root + 'myData/train.txt' # folder where image names and labels are saved
label = '1'

print save_n_label(path, folder, label)
